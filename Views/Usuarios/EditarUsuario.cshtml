
<h2>Editar Usuario</h2>

<!DOCTYPE html>
<html>
<head>
    <title>Formulario de edição </title>
</head>
<body>

    @using (Html.BeginForm("EditarUsuario", "Usuarios", FormMethod.Post))
    {

        <form class="form-group">
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col">
                    <label for="nome">Nome:</label>
                    <input class="form-control" id="nome" name="nome" />
                </div>
                <div class="col">
                    <label for="nomeDeUsuario">Nome de Usuario:</label>
                    <input class="form-control" id="nomeDeUsuario" name="nomeDeUsuario" />
                </div>
                <div class="col">
                    <label for="senha">Senha:</label>
                    <input class="form-control" id="senha" type="password" name="senha" />
                </div>
                <div class="col">
                    <label for="cpf">CPF:</label>
                    <input class="form-control" id="cpf" name="cpf" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label for="cep">CEP</label>
                    <input class="form-control" id="cep" name="cep" placeholder="Apenas números" required="" value="" type="search" maxlength="8" pattern="[0-9]+$">
                </div>
                <div class="col-md-2">
                    <label for="button" style="opacity:0;">CEP</label><br />
                    <button id="button" type="button" class="btn btn-primary button" onclick="pesquisacep(cep.value)">Pesquisar</button>
                </div>
                <div class="col">
                    <label for="estado">Estado</label>
                    <input class="form-control" id="estado" name="estado" readonly="readonly" required="" type="text">
                </div>
                <div class="col">
                    <label for="cidade">Cidade</label>
                    <input class="form-control" id="cidade" name="cidade" readonly="readonly" required="" type="text">
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <label for="rua">Rua</label>
                    <input class="form-control" id="rua" name="rua" placeholder="" required="" type="text">
                </div>
                <div class="col">
                    <label for="bairro">Bairro</label>
                    <input class="form-control" id="bairro" name="bairro" placeholder="" required="" type="text">
                </div>
            </div>


            <div class=" form-group row">
                <div class="col-md-10">
                    <label for="button" style="opacity:0;"></label><br />

                </div>

                <div class="col-md-1">
                    <a href="#" class="col btn btn-danger">Voltar</a>
                </div>
                <div class="col-md-1">
                    <input type="submit" class="btn btn-primary" value="Editar" />
                </div>
            </div>

        </form>
        <script src="~/Scripts/BuscarEndereco.js"></script>
    }
</body>
</html>